---
import { Header } from '../components/Header.astro'
import { Footer } from '../components/Footer.astro'
import { Nav } from '../components/Nav.astro'

type Props = {
 title: string
}

const { title } = Astro.props as Props
---

<html lang="en">
  <Header title={title}>

  <body>
    <Nav />

    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>
